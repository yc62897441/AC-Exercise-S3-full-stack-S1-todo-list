<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h2 class="text-center mt-3">Register</h2>
      <form action="/users/register" method="POST">
        <div class="mt-0">
          <label for="name" class="form-label" style="font-size: 1.5em;">Name</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Enter name" required>
        </div>
        <div class="mt-0">
          <label for="email" class="form-label" style="font-size: 1.5em;">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
        </div>
        <div class="mt-2">
          <label for="password" class="form-label" style="font-size: 1.5em;">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password"
            required>
        </div>
        <div class="mt-2">
          <label for="confirmPassword" class="form-label" style="font-size: 1.5em;">confirm Password</label>
          <input type="password" class="form-control" id="confirmPassword" name="confirmPassword"
            placeholder="Enter confirm password" required>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-2">Register</button>
      </form>
      <p class="lead mt-3">
        Have an Account? <a href="/users/login">Login</a>
      </p>
    </div>
  </div>
</div>