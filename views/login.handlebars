<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1>
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mt-0">
          <label for="email" class="form-label" style="font-size: 1.5em;">Email</label>
          <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
        </div>
        <div class="mt-2">
          <label for="password" class="form-label" style="font-size: 1.5em;">Password</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Enter password"
            required>
        </div>
        <button type="submit" class="btn btn-primary w-100 mt-2">Login</button>
        <a href="/auth/facebook" class="btn btn-info w-100 mt-2">Facebook Login</a>
      </form>
      <p class="lead mt-3">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>